<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>DemoTrading</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>com.demo.MyListener</listener-class>
  </listener>

  <context-param>
    <param-name>driver</param-name>
    <param-value>com.mysql.jdbc.Driver</param-value>
  </context-param>
  <context-param>
    <param-name>url</param-name>
    <param-value>jdbc:mysql://localhost:3306/tradingc_inrush1</param-value>
  </context-param>
  <context-param>
    <param-name>username</param-name>
    <param-value>tradingc_inrush1</param-value>
  </context-param>
  <context-param>
    <param-name>password</param-name>
    <param-value>inrush1234</param-value>
  </context-param>
  <servlet>
    <description></description>
    <display-name>Login</display-name>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.demo.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>Register</display-name>
    <servlet-name>Register</servlet-name>
    <servlet-class>com.demo.Register</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Register</servlet-name>
    <url-pattern>/Register</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>LogOut</display-name>
    <servlet-name>LogOut</servlet-name>
    <servlet-class>com.demo.LogOut</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogOut</servlet-name>
    <url-pattern>/LogOut</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>TradeProduct</display-name>
    <servlet-name>TradeProduct</servlet-name>
    <servlet-class>com.demo.TradeProduct</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TradeProduct</servlet-name>
    <url-pattern>/TradeProduct</url-pattern>
  </servlet-mapping>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Error</exception-type>
    <location>/index.jsp</location>
  </error-page>
  <servlet>
    <description></description>
    <display-name>AutoTradeSetting</display-name>
    <servlet-name>AutoTradeSetting</servlet-name>
    <servlet-class>com.demo.AutoTradeSetting</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AutoTradeSetting</servlet-name>
    <url-pattern>/AutoTradeSetting</url-pattern>
  </servlet-mapping>
</web-app>